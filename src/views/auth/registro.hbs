<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registrarse</h3>
        </div>
        <div class="card-body">
          <form action="/registro" method="POST">
            <div class="form-group">
              <input type="type" name="nombres" placeholder="Nombre y apellido" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="usuario" placeholder="Nombre de usuario" class="form-control">
            </div>
            <div class="form-group">
              <input type="contraseña" name="contraseña" placeholder="Contraseña" class="form-control">
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Ingresar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>