<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{num_preguntas}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre}}
                        </h3>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <p style="color:red">Número de preguntas {{num_preguntas}}</p>
                    <a class="btn btn-danger" href="/cuestionarios/delete/{{id}}">
                        Eliminar Cuestionario
                    </a>
                    <a class="btn btn-secondary" href="/cuestionarios/editar/{{id}}">
                        Editar Cuestionario
                    </a>
                </div>
            </div><br>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No se han creado cuestionarios.</p>

                <button class="btn btn-primary" type="button" data-toggle="modal" href="" data-target="#crear">
                  Crear un cuestionario
                </button>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="modal inmodal fade" id="crear" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/cuestionarios/agregar" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre del cuestionario" required autofocus>
                        </div>

                        <div class="form-group">
                            <select name="num_preguntas" class="form-control" id="">
                                <option >Seleccione número de preguntas</option>
                                <option value="1">1 pregunta</option>
                                <option value="2">2 preguntas</option>
                                <option value="3">3 preguntas</option>
                                <option value="4">4 preguntas</option>
                                <option value="5">5 preguntas</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                    
                        <div class="form-group">
                            <a href="/cuestionarios" class="btn btn-danger btn-block">Cerrar</a>
                        </div>

                </div>
            </div>
        </div>
    </div>

</div>