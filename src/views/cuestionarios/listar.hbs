<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{num_preguntas}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nombre}}
                        </h3>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <p style="color:red">NÃºmero de preguntas {{num_preguntas}}</p>
                    <a class="btn btn-danger" href="/cuestionarios/delete/{{id}}">
                        Eliminar Cuestionario
                    </a>
                    <a class="btn btn-secondary" href="/cuestionarios/editar/{{id}}">
                        Editar Cuestionario
                    </a>
                </div>
            </div><br>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No se han creado cuestionarios.</p>
                <a href="/cuestionarios/agregar">Crear un cuestionario!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>